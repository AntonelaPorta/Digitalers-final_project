<div class="container">
  <h1 class="animate__animated animate__fadeInUp">{{TemplateTitle}}</h1>
  <p class="mt-3">{{message}}</p>
  <div class="row">
    <div class="col-md-9">
      {{#each posts}}
        {{> postCard}}
      {{/each}}
    </div>
    <div class="col-md-3 my-3">
      <div class="border border-end-0 border-start-0 py-3">
        <h5>Categor√≠as</h5>
          <ul>
            {{#each categories}}
            <li><a class="text-decoration-none" href="/category/{{this.slug}}">{{this.name}}</a></li>
            {{/each}}
          </ul>
      </div>
    </div>
  </div>
</div>

