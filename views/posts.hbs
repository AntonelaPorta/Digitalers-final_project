<div class="container">
  <h1 class="page-title animate__animated animate__fadeInUp">Todos los posts</h1>
  <a href="/posts/new" class="btn btn-success animate__animated animate__fadeInUp" class="">
    <i class="bi bi-plus"></i> 
    Crear Post
  </a>
  <div class="row">
    <div class="col-md-9">
      {{#each posts}}
        <article class="card post_card animate__animated animate__fadeInUp my-3">
          <div class="card_image">
            <img src="{{this.image}}" class="card-img-top" alt="post image">
          </div>
          <div class="card-body p-4">
            <strong class="d-inline-block mb-2">{{this.restaurant.location.province}}</strong>
            <h3 class="mb-0">{{this.title}}</h3>
            <p class="mb-2 text-muted">{{this.userName}} - {{this.updatedAt}}</p>
            <p class="mb-2">{{this.shortBody}}...</p>
            <div class="d-flex">
              <a href="/posts/edit/{{this._id}}" class="btn btn-warning mx-1">Editar</a>
              <form action="/posts/{{this._id}}?_method=DELETE" method="POST" class="d-inline mx-1">
                <button class="btn btn-danger">Eliminar</button>
              </form>
              <a href="/posts/{{this.slug}}" class="link-primary ms-auto">Leer m√°s</a>
            </div> 
          </div>   
        </article>
      {{/each}}
    </div>
    <div class="col-md-3">
      <div class="sidebar-widget animate__animated animate__fadeInUp">
        <h5 class="widget-title">Tags</h5>
        <div class="widget-content">
          <a href="#!" class="btn btn-outline-secondary m-1">Design Studio</a>
          <a href="#!" class="btn btn-outline-secondary m-1">Creative Design</a>
          <a href="#!" class="btn btn-outline-secondary m-1">Marketing</a>
          <a href="#!" class="btn btn-outline-secondary m-1">Typography</a>
          <a href="#!" class="btn btn-outline-secondary m-1">Team</a>
          <a href="#!" class="btn btn-outline-secondary m-1">Project</a>
        </div>
      </div>
      <div class="sidebar-widget animate__animated animate__fadeInUp">
        <h5 class="widget-title">Categories</h5>
        <div class="widget-content">
          <ul class="category-list">
            <li><a href="#!">Animation</a></li>
            <li><a href="#!">Branding</a></li>
            <li><a href="#!">Graphic Design</a></li>
            <li><a href="#!">Photography</a></li>
            <li><a href="#!">Web Developing</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

