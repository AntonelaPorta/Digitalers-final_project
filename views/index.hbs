<h2>Listado de Post</h2>

<hr>
<a href="/posts/new" class="btn btn-sucess">Crear Post</a>
<hr>

<table class="table">
  <thead>
    <tr>
      <th scope="col">TÃ­tulo</th>
      <th scope="col">Post</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each posts}}
    <tr>
      <td width="30%">{{this.title}}</td>
      <td width="40%">{{this.body}}</td>
      <td>
        <a href="/posts/{{this.slug}}" class="btn btn-primary m-1">Ver</a>

        <a href="/posts/edit/{{this._id}}" class="btn btn-warning m-1">Editar</a>

        <form action="/posts/{{this._id}}?_method=DELETE" method="POST">
          <button class="btn btn-danger m-1">Eliminar</button>
        </form>
        
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

