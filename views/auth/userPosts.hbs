<div class="container">
  <h1 class="animate__animated animate__fadeInUp">Mis Posts</h1>
  <a
    href="/posts/new"
    class="btn btn-success animate__animated animate__fadeInUp mb-3"
  >
    <i class="bi bi-plus"></i>
    Crear Post
  </a>
  <div class="row row-cols-1 row-cols-xl-2 g-4">
    {{#each posts}}
      <div class="col">
        <article class="card post_card animate__animated animate__fadeInUp my-3">
          <div class="card_image">
            <img src="{{this.image}}" class="card-img-top" alt="post image" />
            <div class="card-img-overlay"><span class="badge bg-info">{{this.category}}</span></div>
          </div>
          <div class="card-body p-4">
            <h3 class="mb-0">{{this.title}}</h3>
            <p class="mb-2 text-muted">{{this.user}} - {{this.updatedAt}}</p>
            <p class="mb-2">{{{this.shortBody}}}...</p>

            <div class="d-flex" id="user-edit">
              <a
                href="/posts/edit/{{this._id}}"
                class="btn btn-warning mx-1"
              >Editar</a>
              <form
                action="/posts/{{this._id}}?_method=DELETE"
                method="POST"
                class="d-inline mx-1"
              >
                <button class="btn btn-danger">Eliminar</button>
              </form>
              <a href="/posts/{{this.slug}}" class="link-primary ms-auto">Leer m√°s</a>
            </div>
          </div>
        </article>
      </div>

    {{/each}}
  </div>

</div>